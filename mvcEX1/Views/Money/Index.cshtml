@using mvcEX1.Models.ViewModels;
@model MoneyViewModel
@{ ViewBag.Title = "Index"; }

<div class="well">
    @using (Html.BeginForm("Index", "Money", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary()
        <div class="form-group">
            @Html.LabelFor(m=>m.MoneyType ,"類別",new { @class="col-sm-2 control-label" })
            <div class="col-sm-10">
                @* TODO : 1.選單項目需換成中文，  2.要有 "請選擇項目" 待選選單項目  *@
                @Html.EnumDropDownListFor(m => m.MoneyType, new { @class = "form-control"} )
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Amount, "金額", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(m => m.Amount, new { htmlAttributes = new { @class = "form-control", placeholder = "金額" } })
                @Html.ValidationMessageFor(m => m.Amount)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Date, "日期", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(m => m.Date, new { htmlAttributes = new { @class = "form-control", placeholder = "日期" } })
                @Html.ValidationMessageFor(m => m.Date)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Description, "備註", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.Description, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(m => m.Description)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
    }
</div>

@Html.Action("ListMoney")