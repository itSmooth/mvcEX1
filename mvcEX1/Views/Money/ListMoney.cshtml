@using mvcEX1.Models.ViewModels;
@model List<MoneyViewModel>
@{ Layout = null; }

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @if (Model != null)
            {
                int i = 1;
                foreach (var money in Model)
                {
        <tr>
            <td> @i </td>
            @{ if (money.MoneyType == MoneyTypeEnum.Income)
                {
                    <td class="blueFont">收入</td>
                }
                else
                {
                    <td class="redFont">支出</td>
                }
            }
            <td> @money.Date.ToString("yyyy-MM-dd") </td>
            <td> @money.Amount.ToString("N0") </td>
        </tr>
                    i++;
                }
            }
        </table>
    </div>
</div>

<style type="text/css">
    .redFont {
        color: red;
    }

    .blueFont {
        color: blue;
    }
</style>
